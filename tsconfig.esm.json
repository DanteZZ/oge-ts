{
  "compilerOptions": {
    "lib": ["dom", "es6"],
    "moduleResolution": "node",
    "target": "es6",
    "module": "ESNext",
    "outDir": "./dist/_esm",

    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    "inlineSources": true,
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "newLine": "lf",

    "noEmitOnError": true
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
